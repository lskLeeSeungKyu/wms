<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.server.boot.dao.InboundDAO">
    <select id="selectInbOrder" parameterType="java.util.Map" resultType="Map">
        select * from "WMS"."INB_OR_U"
        <where>
            <if test="ORDER_DATE != null and ORDER_DATE != ''">
                AND "ORDER_DATE" = #{ORDER_DATE}
            </if>
            <if test="TRANS_STATUS_FILE != null and TRANS_STATUS_FILE != ''">
                AND "TRANS_STATUS_FILE" = #{TRANS_STATUS_FILE}
            </if>
            <if test="CUST_CD != null and CUST_CD != ''">
                AND "CUST_CD" = #{CUST_CD}
            </if>
            <if test="FILE_NM != null and FILE_NM != ''">
                AND "FILE_NM" = #{FILE_NM}
            </if>
            <if test="ORDER_NO_CUST != null and ORDER_NO_CUST != ''">
                AND "ORDER_NO_CUST" = #{ORDER_NO_CUST}
            </if>
        </where>
        order by "LINE_NO"
    </select>

    <select id="selectUploadFile" parameterType="java.util.Map" resultType="Map">
        select "CREATE_ON", "FILE_NM", "ORDER_DATE" from "WMS"."INB_OR_U"
        <where>
            <if test="ORDER_DATE != null and ORDER_DATE != ''">
                AND "ORDER_DATE" = #{ORDER_DATE}
            </if>
            <if test="FILE_NM != null and FILE_NM != ''">
                AND "FILE_NM" = #{FILE_NM}
            </if>
        </where>
        group by "CREATE_ON", "FILE_NM", "ORDER_DATE"
        order by "ORDER_DATE"
    </select>

    <select id="selectTransNo" resultType="String">
        select "WMS".TRANS_NO_GENERATE()
    </select>

    <select id="selectInbOrderEntry" parameterType="map" resultType="Map">
        select "ORDER_DATE", "ORDER_NO_CUST", "ENTRY_YN" from "WMS"."INB_OR_U" WHERE "TRANS_STATUS_FILE" = '생성완료'
            <if test="ORDER_DATE != null and ORDER_DATE != ''">
                AND "ORDER_DATE" = #{ORDER_DATE}
            </if>
        group by "ORDER_DATE", "ORDER_NO_CUST", "ENTRY_YN"
        order by "ORDER_DATE"
    </select>

    <select id="selectInbOrderEntryDetail" parameterType="map" resultType="Map">
        select * from "WMS"."INB_OR_U" WHERE "ORDER_NO_CUST" = #{ORDER_NO_CUST} order by "LINE_NO"
    </select>

    <select id="selectInbInspection" parameterType="map" resultType="Map">
        select "ORDER_DATE", "TRANS_NO", "CONFIRM_YN" from "WMS"."INB_OR_M" WHERE "TRANS_NO" = #{TRANS_NO}
            <if test="ORDER_DATE != null and ORDER_DATE != ''">
                AND "ORDER_DATE" = #{ORDER_DATE}
            </if>
        group by "ORDER_DATE", "TRANS_NO", "CONFIRM_YN"
        order by "ORDER_DATE"
    </select>

    <select id="selectInbInspectionDetail" parameterType="map" resultType="Map">
        select * from "WMS"."INB_OR_D" WHERE "TRANS_NO" = #{TRANS_NO} order by "LINE_NO"
    </select>

    <select id="selectInbConfirmValid" parameterType="map" resultType="Map">
        select "INSPECTION_YN" from "WMS"."INB_OR_D" WHERE "TRANS_NO" = #{TRANS_NO}
    </select>

    <select id="selectStock" parameterType="map" resultType="Map">
        select * from "WMS"."STOCK" WHERE "ORDER_DATE" = #{ORDER_DATE} order by "LINE_NO", "ORDER_DATE"
    </select>

    <update id="inbGenerateU" parameterType="map">
        update "WMS"."INB_OR_U" set "TRANS_STATUS_FILE" = '생성완료' WHERE "TRANS_STATUS_FILE" = '생성전' AND "ORDER_NO_CUST" = #{ORDER_NO_CUST} AND "FILE_NM" = #{FILE_NM}
    </update>

    <insert id="inbGenerateM" parameterType="map">
        insert into "WMS"."INB_OR_M"
            ("CUST_CD", "ORDER_DATE", "FILE_NM", "TRANS_NO", "CONFIRM_YN", "CREATE_ON")
        values
            (#{CUST_CD}, #{ORDER_DATE}, #{FILE_NM}, #{TRANS_NO}, '미확정', #{CREATE_ON})
    </insert>

    <insert id="inbGenerateD" parameterType="map">
        insert into "WMS"."INB_OR_D"
        ("CUST_CD", "ITEM_CD", "ITEM_CD_CUST", "ITEM_NM", "OPT_SIZE", "OPT_COLOR", "ORDER_QTY", "TRANS_NO", "ZONE_CD", "LOC_CD", "LINE_NO", "FILE_NM", "ORDER_DATE", "CREATE_ON", "INSPECTION_YN")
        values
        (#{CUST_CD}, #{ITEM_CD}, #{ITEM_CD_CUST}, #{ITEM_NM}, #{OPT_SIZE}, #{OPT_COLOR}, #{ORDER_QTY}, #{TRANS_NO}, 'A', '000001', #{LINE_NO}, #{FILE_NM}, #{ORDER_DATE}, #{CREATE_ON}, #{INSPECTION_YN})
    </insert>

    <insert id="insertUploadFile" parameterType="map">
        insert into "WMS"."INB_OR_U"
        ("CUST_CD", "ITEM_CD", "ITEM_CD_CUST", "ITEM_NM", "OPT_SIZE", "OPT_COLOR", "ORDER_QTY", "ORDER_NO_CUST", "ZONE_CD", "ENTRY_YN", "LOC_CD", "LINE_NO", "FILE_NM", "ORDER_DATE", "TRANS_STATUS_FILE", "CREATE_ON")
        values
        (#{CUST_CD}, #{ITEM_CD}, #{ITEM_CD_CUST}, #{ITEM_NM}, #{OPT_SIZE}, #{OPT_COLOR}, #{ORDER_QTY}, #{TRANS_NO}, 'A', '미등록', '000001', #{LINE_NO}, #{FILE_NM}, #{ORDER_DATE}, '생성전', #{CREATE_ON})
    </insert>

    <insert id="insertStock" parameterType="map">
        insert into "WMS"."STOCK"
        ("CUST_CD", "ITEM_CD", "ITEM_CD_CUST", "ITEM_NM", "OPT_SIZE", "OPT_COLOR", "ORDER_QTY", "TRANS_NO", "ZONE_CD", "LOC_CD", "LINE_NO", "FILE_NM", "ORDER_DATE", "CREATE_ON")
        values
        (#{CUST_CD}, #{ITEM_CD}, #{ITEM_CD_CUST}, #{ITEM_NM}, #{OPT_SIZE}, #{OPT_COLOR}, #{ORDER_QTY}, #{TRANS_NO}, 'A', '000001', #{LINE_NO}, #{FILE_NM}, #{ORDER_DATE}, #{CREATE_ON})
    </insert>

    <update id="inbGenerateD2" parameterType="map">
        update "WMS"."INB_OR_U" set "ENTRY_YN" = '등록' WHERE "ENTRY_YN" = '미등록' AND "ORDER_NO_CUST" = #{ORDER_NO_CUST}
    </update>

    <update id="inbInspection" parameterType="map">
        update "WMS"."INB_OR_D" set "INSPECTION_YN" = 'Y' WHERE "LINE_NO" = #{LINE_NO} AND "TRANS_NO" = #{TRANS_NO}
    </update>

    <update id="inbInspectionCancel" parameterType="map">
        update "WMS"."INB_OR_D" set "INSPECTION_YN" = 'N' WHERE "LINE_NO" = #{LINE_NO} AND "TRANS_NO" = #{TRANS_NO}
    </update>

    <update id="inbConfirm" parameterType="map">
        update "WMS"."INB_OR_M" set "CONFIRM_YN" = '확정' WHERE "TRANS_NO" = #{TRANS_NO}
    </update>

</mapper>